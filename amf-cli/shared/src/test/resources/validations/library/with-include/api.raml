#%RAML 1.0 Library
uses:
  core: core.raml
types:
  Address:
    type: core.Auditable
    properties:
      addressFirstLine: string
      addressSecondLine?: string
      city: string
      country: Country
      latitude?: number
      longitude?: number
      postCode: string
      stateRegion: string
  Country:
    type: core.MainEntity
    properties:
      isoCode:
        type: string
        enum: [ES, EN, UK, US, IT, PT, BR]
    example:
      id: 1
      name: "Spain"
      isoCode: "ES"
      keyCode: "ES"
  Email:
    pattern: "^\\w+(\\.\\w+)?@\\w+(\\.\\w+)?"
  FunctionalArea:
    type: core.MainEntity
  Industry:
    type: core.MainEntity
    properties:
      description: string
      sectors:
        items: Sector
        minItems: 1
  Language:
    type: core.Entity
    properties:
      name: string
      code: string
  Sector:
    type: core.MainEntity
    properties:
      description: string
      industry: Industry