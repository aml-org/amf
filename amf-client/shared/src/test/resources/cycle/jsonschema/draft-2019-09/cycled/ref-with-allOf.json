{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$ref": "#/$defs/schema",
  "$defs": {
    "schema": {
      "type": "object",
      "required": [
        "name",
        "pepito"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "pepito": {
          "type": "number"
        }
      },
      "allOf": [
        {
          "type": "string",
          "format": "email"
        },
        {
          "type": "object",
          "required": [
            "anotherName"
          ],
          "properties": {
            "anotherName": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
