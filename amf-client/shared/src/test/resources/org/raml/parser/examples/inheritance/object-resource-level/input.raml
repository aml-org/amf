#%RAML 1.0
title: API with Types
baseUri: /media

schemas:
  - Player: |
      {
        "type": "object",
        "properties":
          {
            "name": {
              "type":"string"
            }
          }
      }
types:
  Person:
    type: object
    properties:
      firstname:
        type: string
        description: test
      lastname: string
      addresses: string[]
      age: number
  User:
    type: Person
    properties:
      firstname:
        type: string
        required: false
      id: number
      department: Department[]
  Developer:
    type: User
    properties:
      github: string
  Department:
    type: object
    properties:
      name: string
    example:
      name: Engineering
  CEO:
    type: User | Developer
  Cleaner: |
    {
           "type": "object",
           "properties":
             {
               "name": {
                 "type":"string"
               }
             }
         }

