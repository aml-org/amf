#%RAML 1.0
title: GitHub API
version: v3
baseUri: https://api.github.com
securitySchemes:
  oauth_2_0:
    type: OAuth 2.0
    settings:
      authorizationUri: https://www.domain.com/1/oauth2/authorize
      accessTokenUri: https://www.domain.com/1/oauth2/token
      authorizationGrants: [ authorization_code ]

/users/{userid}/gists:
  get:
    securedBy:
      - oauth_2_0:
          authorizationGrants: [ client_credentials ]
