{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/root",
  "definitions": {
    "root": {
      "required": [
        "value"
      ],
      "properties": {
        "value": {
          "anyOf": [
            {
              "$ref": "#/definitions/cat"
            },
            {
              "$ref": "#/definitions/dog"
            }
          ]
        }
      },
      "type": "object"
    },
    "cat": {
      "type": "object",
      "required": [
        "name",
        "color"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "color": {
          "type": "string"
        }
      }
    },
    "dog": {
      "type": "object",
      "required": [
        "name",
        "fangs"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "fangs": {
          "type": "string"
        }
      }
    }
  }
}
